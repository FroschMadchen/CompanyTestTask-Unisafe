<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barbi"
        android:layout_margin="@dimen/margin_start_middle">

        <EditText
            android:id="@+id/nameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_middle"
            android:layout_marginTop="@dimen/text_size_large"
            android:gravity="left"
            android:textColor="@color/btn_barbi"
            android:textSize="@dimen/text_size_large"
            android:layout_marginEnd="@dimen/margin_start_middle"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="Name product" />

        <EditText
            android:id="@+id/quantityProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_middle"
            android:layout_marginTop="@dimen/text_size_midl"
            android:layout_marginBottom="16dp"
            android:gravity="left"
            android:textSize="@dimen/text_size_midl"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/margin_start_middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameProduct"
            tools:hint="Quantity" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>